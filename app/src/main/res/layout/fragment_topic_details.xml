<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="txtClick"
            type="com.example.kodecamp.fragments.TopicDetails" />
    </data>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".fragments.TopicDetails"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginStart="16dp"
                    android:text="@string/share_topic_with_others"
                    android:layout_gravity="end"
                    android:layout_marginEnd="16dp"
                    android:onClick="@{()-> txtClick.share()}"
                    android:textSize="18sp"
                    android:fontFamily="@font/latobold"
                    android:textColor="@color/primarycolor"/>

                <TextView
                    android:id="@+id/TopicTileInDe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:text="@string/topic_1"
                    android:textSize="18sp"
                    android:fontFamily="@font/latobold"
                    android:textColor="@color/textcolor"/>

                <TextView
                    android:id="@+id/TopicDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/topic_details"
                    android:textSize="14sp"
                    android:fontFamily="@font/latoregular"
                    android:textColor="@color/textcolor"/>

                <TextView
                    android:id="@+id/Example"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/example_of_kotlin"
                    android:textSize="16sp"
                    android:fontFamily="@font/latobold"
                    android:textColor="@color/textcolor"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@drawable/egkot"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:id="@+id/keyFeatures"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/key_features"
                    android:textSize="18sp"
                    android:fontFamily="@font/latobold"
                    android:textColor="@color/textcolor"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/keyFeaturesRecView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                <TextView
                    android:id="@+id/advantages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/advantages_of_kotlin"
                    android:textSize="18sp"
                    android:fontFamily="@font/latobold"
                    android:textColor="@color/textcolor"/>

                <TextView
                    android:id="@+id/advantages1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/advantage1"
                    android:textSize="14sp"
                    android:fontFamily="@font/latoregular"
                    android:textColor="@color/textcolor"/>

                <TextView
                    android:id="@+id/advantages2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/advantage2"
                    android:textSize="14sp"
                    android:fontFamily="@font/latoregular"
                    android:textColor="@color/textcolor"/>

                <TextView
                    android:id="@+id/advantages3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/advantage3"
                    android:textSize="14sp"
                    android:fontFamily="@font/latoregular"
                    android:textColor="@color/textcolor"/>

                <TextView
                    android:id="@+id/advantages4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/advantage4"
                    android:textSize="14sp"
                    android:fontFamily="@font/latoregular"
                    android:textColor="@color/textcolor"/>

                <TextView
                    android:id="@+id/advantages5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/advantage5"
                    android:textSize="14sp"
                    android:fontFamily="@font/latoregular"
                    android:textColor="@color/textcolor"/>

                <TextView
                    android:id="@+id/Application"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/applications_of_kotlin"
                    android:textSize="18sp"
                    android:fontFamily="@font/latobold"
                    android:textColor="@color/textcolor"/>

                <TextView
                    android:id="@+id/Application1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/application1"
                    android:textSize="14sp"
                    android:fontFamily="@font/latoregular"
                    android:textColor="@color/textcolor"/>

                <TextView
                    android:id="@+id/Application2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/application2"
                    android:textSize="14sp"
                    android:fontFamily="@font/latoregular"
                    android:textColor="@color/textcolor"/>

                <TextView
                    android:id="@+id/Application3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/application3"
                    android:textSize="14sp"
                    android:fontFamily="@font/latoregular"
                    android:textColor="@color/textcolor"/>


            </androidx.appcompat.widget.LinearLayoutCompat>

        </ScrollView>

