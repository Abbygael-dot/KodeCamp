<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".fragments.TopicDetails"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TopicTileInDe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginStart="16dp"
                android:text="@string/topic_title"
                android:textSize="24sp"
                android:fontFamily="@font/latobold"
                android:textColor="@color/textcolor"/>

            <TextView
                android:id="@+id/TopicDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:text="@string/topic_details"
                android:textSize="18sp"
                android:fontFamily="@font/latoregular"
                android:textColor="@color/textcolor"/>

            <ImageView
                android:id="@+id/topic_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/kodecampblack"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"/>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>
</layout>